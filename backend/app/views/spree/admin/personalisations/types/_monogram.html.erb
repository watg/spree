<div class="field alpha seven columns">

  <div class="field  alpha seven columns" data-hook="max_initials">
    <%= label :max_initals, :max_initals %>
    <%= text_field_tag "[#{param_prefix}][max_initials]", personalisation.max_initials, :class => 'fullwidth' %>
  </div>

  <div class="field alpha two columns" data-hook="price-gbp">
    <%= label :GBP, :GBP %>
    <%= text_field_tag "[#{param_prefix}][prices][GBP]", personalisation.prices['GBP'], :class => 'fullwidth' %>
  </div>

  <div class="field alpha two columns" data-hook="price-usd">
    <%= label :USD, :USD %>
    <%= text_field_tag "[#{param_prefix}][prices][USD]", personalisation.prices['USD'], :class => 'fullwidth' %>
  </div>

  <div class="field alpha two columns" data-hook="price-eru">
    <%= label :EUR, :EUR %>
    <%= text_field_tag "[#{param_prefix}][prices][EUR]", personalisation.prices['EUR'], :class => 'fullwidth' %>
  </div>

</div>



