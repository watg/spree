<%# from variant options %>
<tr class="option_value fields" id="spree_<%= dom_id(f.object) %>"  data-hook="option_value" class="<%= cycle('odd', 'even')%>">
  <% if f.object.persisted? %>
    <td class="no-border">
      <span class="handle"></span>
      <%= f.hidden_field :id %>
    </td>
  <% end %>
  <td colspan="<%= f.object.persisted? ? '' : '2' %>" class="name"><%= f.text_field :name %></td>
  <td class="presentation"><%= f.text_field :presentation %></td>
  <td class="sku_part"><%= f.text_field :sku_part %></td>
  
  <!-- <td class="preview"> 
    <% if f.object.persisted?  and f.object.color_code?%>
      <span style="padding:10px;background-color:<%=f.object.color_code%>"> <%=f.object.color_code%></span>
    <% end %>
  </td> -->
  <td><%= image_tag f.object.image.url(:small) if f.object.has_image? %></td>
  <td><%= f.file_field :image %></td>
  <!-- <td class="color_code"><%#= f.text_field :color_code %></td> -->
  <td class="actions"><%= link_to_remove_fields Spree.t(:remove), f, :no_text => true %></td>
</tr>

<%# end variant options %>
