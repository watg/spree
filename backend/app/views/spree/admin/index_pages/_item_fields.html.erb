<tr class="index_page fields" id="spree_<%= dom_id(f.object) %>"  data-hook="index_page" class="<%= cycle('odd', 'even')%>">
  <td class="no-border">
    <span class="handle"></span>
    <%= f.hidden_field :id %>
  </td>
  <td><%= image_tag first_image_url(f.object.item) %></td>

  <td><%= link_to f.object.name, url_for([:admin, f.object.item]) %></td>
  
  <td>
    <% Spree::IndexPage::TEMPLATES.each do |template| %>
      <%= f.radio_button :template_id, template[:id] %>
      <%= f.label :template_id, template[:name] %><br>
    <% end %>
  </td>
  <td><%= f.check_box :inverted %> Inverted colours</td>
  
  <td class="actions"><%= link_to_remove_fields Spree.t(:remove), f, :no_text => true %></td>
</tr>
