<div class="field alpha four columns">
  <%= select_tag "#{param_prefix}[preferred_operator]", options_for_select(Spree::Promotion::Rules::ItemTotal::OPERATORS.map{|o| [Spree.t("item_total_rule.operators.#{o}"),o]}, promotion_rule.preferred_operator), {:class => 'select2 select_item_total_operator fullwidth'} %>
</div>
<div class="field omega two columns">
  <%= text_field_tag "#{param_prefix}[preferred_amount]", promotion_rule.preferred_amount, :class => 'fullwidth' %>
</div>
<div class="field two columns">
  <%= select_tag "#{param_prefix}[preferred_currency]", options_for_select(Spree::Promotion::Rules::ItemTotal.currencies, promotion_rule.preferred_currency), {:class => 'select2 select_item_total_currency fullwidth'} %>
</div>
<div class="field alpha four columns">
zone ( optional )
  <%= select_tag "#{param_prefix}[preferred_zone_id]", options_for_select(Spree::Zone.order(:name).map{|z| [z.name, z.id] }, promotion_rule.preferred_zone_id), {:class => 'select2 select_item_total_zone_id fullwidth'} %>
</div>

