<% content_for :page_title do %>
  <%= Spree.t(:listing_suppliers) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_supplier">
    <%= button_link_to Spree.t(:new_supplier), new_object_url, { :remote => true, :icon => 'icon-plus', :id => 'admin_new_supplier' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_suppliers_sidebar">

    <%= search_form_for [:admin, @search] do |f| %>

        <%- locals = {:f => f} %>

        <div data-hook="admin_suppliers_index_search">

          <div class="alpha four columns">
            <div class="field">
              <%= f.label :firstname_cont, Spree.t(:firstname) %>
              <%= f.text_field :firstname_cont, :size => 15 %>
            </div>
          </div>

          <div class="four columns">
            <div class="field">
              <%= f.label :lastname_cont, Spree.t(:lastname) %>
              <%= f.text_field :lastname_cont, :size => 15 %>
            </div>
          </div>

          <div class="four columns">
            <div class="field">
              <%= f.label :company_name_cont, Spree.t(:company_name) %>
              <%= f.text_field :company_name_cont, :size => 32 %>
            </div>
          </div>

          <div class="three columns omega">
            <div class="field checkbox">
              <label>
                <%= f.check_box :is_company_true %>
                <%= Spree.t(:show_companies) %>
              </label>
            </div>
          </div>

          <div class="three columns omega">
            <div class="field checkbox">
              <label>
                <%= f.check_box :is_displayable_true %>
                <%= Spree.t(:show_displayable) %>
              </label>
            </div>
          </div>


        </div>

        <div class="clear"></div>

        <div class="form-buttons actions filter-actions" data-hook="admin_suppliers_index_search_buttons">
          <%= button Spree.t(:search), 'icon-search' %>
        </div>
    <% end %>
  </div>
<% end %>

<div id="new_supplier_wrapper" data-hook></div>

<%= paginate @collection %>

<% if @collection.any? %>
  <table class="index" id="listing_suppliers">
    <colgroup>
       <col style="width: 10%;">
       <col style="width: 20%;">
       <col style="width: 20%;">
       <col style="width: 20%;">
       <col style="width: 10%;">
       <col style="width: 10%;">
    </colgroup>
    <thead>
      <tr data-hook="admin_suppliers_index_headers">
        <th><%= Spree.t(:image) %></th>
        <th><%= Spree.t(:firstname) %></th>
        <th><%= Spree.t(:lastname) %></th>
        <th><%= Spree.t(:company_name) %></th>
        <th><%= Spree.t(:company) %></th>
        <th><%= Spree.t(:displayable) %></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |supplier| %>
          <tr <%= spree_dom_id supplier %>" data-hook="admin_suppliers_index_rows" class="<%= cycle('odd', 'even') %>">
            <td class="align-center"><%= image_tag supplier.avatar.url(:mini) rescue '' %></td>
            <td class="align-center"><%= supplier.firstname rescue '' %></td>
            <td class="align-center"><%= supplier.lastname rescue '' %></td>
            <td class="align-center"><%= supplier.company_name rescue '' %></td>
            <td class="align-center"><%= supplier.is_company rescue '' %></td>
            <td class="align-center"><%= supplier.is_displayable rescue '' %></td>
            <td class="actions" data-hook="admin_suppliers_index_row_actions">
              <%= link_to_edit supplier, :no_text => true, :class => 'edit' %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_results) %>
  </div>
<% end %>

<%= paginate @collection %>

