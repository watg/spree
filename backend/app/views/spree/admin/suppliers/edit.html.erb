<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_suppliers_list), session[:return_to] || admin_suppliers_url, :icon => 'icon-arrow-left' %></li>
  <li id="new_supplier_link">
    <%= button_link_to Spree.t(:new_supplier), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_supplier' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @supplier } %>

<%= form_for [:admin, @supplier], :method => :put, :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <div data-hook="admin_supplier_edit_form">
      <%= render :partial => 'form', :locals => { :f => f } %>
    </div>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

