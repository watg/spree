<ul>
<% order.parcels_grouped_by_box.each do |parcel| %>
<li>
<%= parcel.quantity %> - <%= parcel.box.sku %>
<%= button_to 'X', admin_waiting_order_path(order.id, box_sku: parcel.box.sku) , method: :delete, data: { confirm: "Are you sure to delete parcels?" } %>
</li>
<% end %>
</ul>
<div id=<%= "order-#{order.id}" %> class="add-box" style="display:none;">
<%= form_tag admin_waiting_order_path(order.id), method: :put do |f| %>
<%= text_field_tag('box[quantity]',nil, width: 2) %>
<%= select_tag('box[id]', options_from_collection_for_select(all_boxes, "id", "sku")) %>
<%= hidden_field_tag "page", params[:page] %>
<%= submit_tag('save') %>
<% end %>
</div>
