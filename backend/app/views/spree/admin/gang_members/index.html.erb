<% content_for :page_title do %>
  <%= Spree.t(:listing_gang_members) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_gang_member">
    <%= button_link_to Spree.t(:new_gang_member), new_object_url, { :remote => true, :icon => 'icon-plus', :id => 'admin_new_gang_member' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_gang_members_sidebar">

    <%= search_form_for [:admin, @search] do |f| %>

        <%- locals = {:f => f} %>

        <div data-hook="admin_gang_members_index_search">
          <div class="alpha four columns">
            <div class="field">
              <%= f.label :firstname_cont, Spree.t(:firstname) %>
              <%= f.text_field :firstname_cont, :size => 15 %>
            </div>
          </div>
          <div class="four columns">
            <div class="field">
              <%= f.label :lastname_cont, Spree.t(:lastname) %>
              <%= f.text_field :lastname_cont, :size => 15 %>
            </div>
          </div>
        </div>

        <div class="clear"></div>

        <div class="form-buttons actions filter-actions" data-hook="admin_gang_members_index_search_buttons">
          <%= button Spree.t(:search), 'icon-search' %>
        </div>
    <% end %>
  </div>
<% end %>

<div id="new_gang_member_wrapper" data-hook></div>

<%= paginate @collection %>

<% if @collection.any? %>
  <table class="index" id="listing_gang_members">
    <colgroup>
       <col style="width: 10%;">
       <col style="width: 40%;">
       <col style="width: 40%;">
    </colgroup>
    <thead>
      <tr data-hook="admin_gang_members_index_headers">
        <th><%= Spree.t(:image) %></th>
        <th><%= Spree.t(:firstname) %></th>
        <th><%= Spree.t(:lastname) %></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |gang_member| %>
          <tr <%= spree_dom_id gang_member %>" data-hook="admin_gang_members_index_rows" class="<%= cycle('odd', 'even') %>">
            <td class="align-center"><%= image_tag gang_member.avatar.url(:mini) rescue '' %></td>
            <td class="align-center"><%= gang_member.firstname rescue '' %></td>
            <td class="align-center"><%= gang_member.lastname rescue '' %></td>
            <td class="actions" data-hook="admin_gang_members_index_row_actions">
              <%= link_to_edit gang_member, :no_text => true, :class => 'edit' %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_results) %>
  </div>
<% end %>

<%= paginate @collection %>

