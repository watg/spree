<% content_for :page_title do %>
  <%= Spree.t(:shipping_manifests) %>
<% end %>

<%= render :partial => 'spree/admin/shared/order_sub_menu' %>

<% unless @manifests.empty? %>
  <table class="index responsive" id="listing_orders" data-hook>
    <colgroup>
       <col style="width: 25%;">
       <col style="width: 20%;">
       <col style="width: 20%;">
       <col style="width: 35%;">
    </colgroup>
    <thead>
      <tr data-hook="admin_orders_index_headers">
	<th><%= Spree.t(:carrier) %></th>
	<th><%= Spree.t(:number_of_consignments) %></th>
	<th><%= Spree.t(:number_of_parcels) %></th>
        <th data-hook="admin_orders_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @manifests.each_with_index do |manifest,index| %>
      <tr data-hook="admin_orders_index_rows" class="<%= cycle('odd', 'even') %>">
        <td class="align-center"><%= manifest[:carrier] %></td>
        <td class="align-center"><%= manifest[:consignment_count] %></td>
        <td class="align-center"><%= manifest[:parcel_count] %></td>
        <td class='actions align-center' data-hook="admin_orders_index_row_actions">
          <%= button_to 'Create and Print Manifest', admin_shipping_manifests_path(carrier: manifest[:carrier]) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-manifests-available">
    <%= Spree.t(:no_manifests_available)%>
  </div>
<% end %>
