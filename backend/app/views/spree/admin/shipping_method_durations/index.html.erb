<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
    <%= Spree.t(:shipping_method_durations) %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:new_shipping_method_duration), new_object_url,  :icon => 'icon-plus', :id => 'admin_new_shipping_method_duration_link' %>
    </li>
<% end %>

<% if @shipping_method_durations.any? %>
    <table class="index" id='listing_shipping_methods'>
      <colgroup>
        <col style="width: 20%">
        <col style="width: 10%">
        <col style="width: 25%">
        <col style="width: 20%">
        <col style="width: 10%">
      </colgroup>
      <thead>
      <tr data-hook="admin_shipping_methods_index_headers">
        <th><%= Spree.t(:description) %></th>
        <th data-hook="admin_shipping_method_durations_index_header_actions" class="actions"></th>
      </tr>
      </thead>
      <tbody>
      <% @shipping_method_durations.each do |shipping_method_duration|%>
          <tr id="<%= spree_dom_id shipping_method_duration %>" data-hook="admin_shipping_methods_index_rows" class="<%= cycle('odd', 'even')%>">
            <td class="align-center"><%= shipping_method_duration.description %></td>
            <td data-hook="admin_shipping_methods_index_row_actions" class="actions">
              <%= link_to_edit shipping_method_duration, :no_text => true %>
              <%= link_to_delete shipping_method_duration, :no_text => true %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="alpha twelve columns no-objects-found">
      <%= Spree.t(:no_resource_found, resource: I18n.t('spree.shipping_method_duration')) %>,
      <%= link_to Spree.t(:add_one), spree.new_admin_shipping_method_duration_path %>!
    </div>
<% end %>