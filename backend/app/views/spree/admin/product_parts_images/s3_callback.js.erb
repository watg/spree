<% if @outcome.valid? %>
  <% snippet = nil %>
  <% ActionView::Helpers::FormBuilder.new(:product, @product, self, {}).fields_for(:product_parts_images, :child_index => @outcome.result.image.id) do |image_form| %>
    <% snippet = capture do %>
      <%= render 'spree/admin/product_parts_images/image', :f => image_form %>
    <% end %>
  <% end %>

  $('#upload_<%=params[:unique_id]%>').hide();
  $('.no-objects-found').hide();
  $('#images_table_body').append('<%= j snippet %>');
  activateSelect2();
<% else %>
  show_flash('error', '<%= @outcome.errors.full_messages.to_sentence %>');
<% end %>
