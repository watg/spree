<% content_for :page_title do %>
  <%= Spree.t(:hold_order) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_order), [:edit, :admin, @order], :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render :partial => 'spree/admin/shared/order_sub_menu' %>

<div class="twelve columns alpha omega">
  <h2>Order <%= @order.number %> on hold</h2>

  <%= simple_format(@note.reason) %>
</div>


<%= form_tag admin_order_hold_path(@order, @note), method: :delete do %>
<div class="twelve columns alpha omega">
  <fieldset>
    <legend align="center">Resume Order</legend>
    <div class="actions" data-hook="buttons">
      <%= button "Remove hold" %>
    </div>
  </fieldset>
</div>
<% end -%>

