<%= f.field_container :name do %>
  <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
  <%= f.text_field :name, :class => 'fullwidth title' %>
  <%= f.error_message_on :name %>
<% end %>

<%= f.field_container :title do %>
  <%= f.label :title, Spree.t(:title) %> <span class="required">*</span><br />
  <%= f.text_field :title, :class => 'fullwidth title' %>
  <%= f.error_message_on :title %>
<% end %>

<%= f.field_container :permalink do %>
  <%= f.label :permalink, Spree.t(:permalink) %> <span class="required">*</span><br />
  <%= f.text_field :permalink, :class => 'fullwidth title' %>
  <%= f.error_message_on :permalink %>
<% end %>

<% Spree::ProductGroupTab::TYPES.each_with_index do |tab_type, position| %>
<%= render :partial => 'tab', :locals => {:tab => @product_group.tab(tab_type), :position => position} %>
<% end %>

<div class="clear"></div>

<div class="fullwidth columns alpha omega">
  <fieldset>
    <legend align="center">Visible Tags</legend>
    <% @product_group.available_tags.each do |tag| %>
    <label class="tag">
      <%= hidden_field_tag "product_group[tags][]" %>
      <%= check_box_tag "product_group[tags][]", tag.id, @product_group.tags.include?(tag), :id => "product_group_tags_#{tag.id}" %>
      <%= tag.value %>
    </label>
    <% end %>
  </fieldset>
</div>
