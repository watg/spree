<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_suite_category) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_suite_categories_list), spree.admin_shipping_methods_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_suite_category_edit_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @suite_category } %>
</div>

<div data-hook="admin_suite_category_edit_form">
  <%= form_for [:admin, @suite_category] do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>

      <div class="clear"></div>

      <div data-hook="admin_suite_category_edit_form_buttons">
        <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
      </div>
    </fieldset>
  <% end %>
</div>
