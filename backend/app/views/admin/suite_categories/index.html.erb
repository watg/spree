<% content_for :page_title do %>
  <%= Spree.t(:suite_categories) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_suite_category), new_object_url,  :icon => 'icon-plus', :id => 'admin_new_suite_category_link' %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% if @suite_categories.any? %>
  <table class="index" id='listing_shipping_methods'>
    <colgroup>
      <col style="width: 20%">
      <col style="width: 10%">
      <col style="width: 25%">
      <col style="width: 20%">
      <col style="width: 10%">
    </colgroup>
    <thead>
    <tr data-hook="admin_shipping_methods_index_headers">
      <th><%= Spree.t(:name) %></th>
      <th data-hook="admin_suite_categories_index_header_actions" class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @suite_categories.each do |smd|%>
      <% admin_present(smd, {}) do |suite_category| %>
        <tr id="<%= spree_dom_id suite_category %>" data-hook="admin_shipping_methods_index_rows" class="<%= cycle('odd', 'even')%>">
          <td class="align-center"><%= suite_category.name %></td>
          <td data-hook="admin_shipping_methods_index_row_actions" class="actions">
            <%= link_to_edit suite_category, :no_text => true %>
            <%= link_to_delete suite_category, :no_text => true %>
          </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t('spree.suite_category')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_suite_category_path %>!
  </div>
<% end %>
