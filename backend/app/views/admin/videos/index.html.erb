<% content_for :page_title do %>
  Videos
<% end %>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to 'new video', 'videos/new', { :icon => 'plus' } %> 
  </li>
<% end %> 

<div class="container"> 
  <% @videos.each do |v| %> 
    <div class="row video" >
      <div class="four columns title">
        <h3><%= v.title.upcase %></h3>
      </div>
      <div class="eight columns">
        <p><%= raw(v.embed) %><p>
      </div>
      <div class="two columns">
        <ul>
          <li><%= link_to_with_icon 'edit', '', "/admin/videos/#{v.id}/edit" %></li>
          <li><%= link_to_with_icon 'trash', '', "/admin/videos/#{v.id}",  method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>