//= require select2
jQuery(function($) {
  // Make select beautiful
  activateSelect2 = function () {
    $('select.select2').select2({
        allowClear: true,
        dropdownAutoWidth: true,
        closeOnSelect: false
      });
  };

  activateSelect2();

  function format_taxons(taxon) {
    new_taxon = taxon.text.replace('->', '<i class="icon-arrow-right">')
    return new_taxon;
  }

  $("#suite_taxon_ids").on({
    change: function(e){
      $('.select2-search-choice .with-tip').powerTip({
        smartPlacement: true,
        fadeInTime: 50,
        fadeOutTime: 50
      })
    }
  })
})
