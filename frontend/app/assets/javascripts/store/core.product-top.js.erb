core.productTop = {};

$(document).ready(function() {
	if (!$('body').hasClass('product-top')) return false;

	core.productTop.readyBackground();
});

/* ----- Init methods ----- */

core.productTop.readyBackground = function() {
	var body = $('body');
	var prefix = 'background-';
		
	if (core.isMobileWidthOrLess() === true) {
		prefix = 'mobile/background-';
	}

	prefix = '<%= cdn_prefix %>' + 'product-top/' + prefix 
	
	var background = prefix + 'women-0414.jpg'; // Women by default
	
	if (body.hasClass('men')) {
		background = prefix + 'men.jpg';
	} else if (body.hasClass('kids')) {
		background = prefix + 'kids.jpg';
	} else if (body.hasClass('whats-new')) {
		background = prefix + 'whats-new-0414.jpg';
	} else if (body.hasClass('collections')) {
		background = prefix + 'collections.jpg';
	} else if (body.hasClass('knitting')) {
		background = prefix + 'knitting.jpg';
	} else if (body.hasClass('knitting-women')) {
		background = prefix + 'knitting-women.jpg';
	} else if (body.hasClass('knitting-men')) {
		background = prefix + 'knitting-men.jpg';
	} else if (body.hasClass('knitting-kids')) {
		background = prefix + 'knitting-kids.jpg';
	}
	
	$('html').css('background', '#f1f1f1 url(' + background + ') no-repeat center center fixed');
	$('html').css('height', '100%');
	$('html').css('background-size', 'cover');

	// Adjust background for mobile/tablet
	if (core.isTabletWidthOrLess() === true) {
		if (core.isMobileWidthOrLess() === true) {
			$('html').css('background-position', '0 0');
			$('html').css('background-size', '320px');
		}
	}
}
