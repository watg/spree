/* Negate widths in homepage to go full-bleed, trim margin on global nav */
body.homepage {
	.row-shipping-and-contact + .container > div.row {
  		max-width: none !important;
  	}
  	.row-shipping-and-contact + .container > div.row > .columns {
		padding: 0;
  	}
	/* Set certain elements to have transparent backgrounds */
	.container:first-child,
	.global-menu-toggle,
	.currency-setting select {
		background-color: transparent;
	}
	@media only screen and (min-width: 48em) {
		.nav-global {
			background-color: transparent;
		}
		.footer-global-unit,
		.marketing {
			border-top: 0;
		}
	}
	.pop {
		font-family: 'Gill Sans W01 Book';
	}
	a {
		outline: 0;
	}
}

/* Leader layout styles */
.home-main {
	& > a {
		display: block;
		text-decoration: none;
	}
	.leader {
		.intro {
			position: absolute;
			left: -999em;
			top: -999em;
		}
		& > div {
			position: relative;
			margin: 0 auto;
			max-width: 62.5em;
		}
	}
}

/* LEADER #1: Colour bleeds up into nav area */
body.homepage #header {
	background: #fff; /* Mobile view colour matching for leader-1 */
}
@media only screen and (min-width: 48em) {
	body.homepage {
		background: #fff; /* Large view colour matching for leader-1 */
	}
	body.homepage #header {
		background-color: transparent;
	}
}

.home-main .leader-1 {	
	/* Small screen background */
	background: #fef574 url('<%= cdn_url("/homepage/2014-03-20/homepage-hero-small.jpg") %>') top center no-repeat;
	& > div {
		height: 568px;
	}
