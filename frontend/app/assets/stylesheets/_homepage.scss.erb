/* Negate widths in homepage to go full-bleed, trim margin on global nav */
body.homepage {
	.nav-primary-sub + .container > div.row {
  		max-width: none !important;
  	}
  	.nav-primary-sub + .container > div.row > .columns {
		padding: 0;
  	}
	/* Set certain elements to have transparent backgrounds */
	.container:first-child,
	.global-menu-toggle,
	.currency-setting select {
		background-color: transparent;
	}
	@media only screen and (min-width: 48em) {
		.nav-global {
			background-color: transparent;
		}
		.footer-global-unit,
		.marketing {
			border-top: 0;
		}
	}
	.pop {
		font-family: 'Gill Sans W01 Book';
	}
	a {
		outline: 0;
	}
}

/* Leader layout styles */
.home-main {
	& > a {
		display: block;
		text-decoration: none;
	}
	.leader {
		.intro {
			position: absolute;
			left: -999em;
			top: -999em;
		}
		& > div {
			position: relative;
			margin: 0 auto;
			max-width: 62.5em;
		}
	}
}

/* LEADER #1: Colour bleeds up into nav area */
body.homepage #header {
	background: #fff; /* Mobile view colour matching for leader-1 */
}
@media only screen and (min-width: 48em) {
	body.homepage {
		background: #fff; /* Large view colour matching for leader-1 */
	}
	body.homepage #header {
		background-color: transparent;
	}
}
.home-main .leader-1 {	
	/* Small screen background */
	background: #000 url('<%= cdn_url("/homepage/2014-02-28/homepage-hero-small.jpg") %>') top center no-repeat;
	& > div {
		height: 620px;
	}
	.links {
		padding: 498px 0 0 0;
		text-align: center;
		a {
			margin: 10px auto;
			width: 200px;
			height: 45px;
			display: block;
			background: transparent;
			font-size: 0;
			line-height: 0;
			border: 0;
		}
	}
	.link-eek {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 620px;
		display: block;
		font-size: 0;
		line-height: 0;
	}
	/* Large screen background */
	@media only screen and (min-width: 48em) {
		background: #000 url('<%= cdn_url("/homepage/2014-02-28/homepage-hero-large2.jpg") %>') top center no-repeat;
		& > div {
			height: 570px;
		}
		.links {
			padding: 454px 0 0 0;
			a {
				position: relative;
				left: 215px;
				display: inline-block;
				/* IE for inline-block */
				zoom: 1;
				*display: inline;
			}
		}
		.link-eek {
			height: 570px;
		}
	}
	.button {
		padding: 0.4em 0.6em 0.4em;
	}
}

