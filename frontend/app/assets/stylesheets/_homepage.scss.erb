/* Strapline area (text, black background) */
.strap {
	padding: 70px 0 60px 0;
	text-align: center;
	background-color: #000;
	p {
		font-family: 'Gill Sans W01 Light';
		font-size: 1.875em;
		line-height: 1.2;
		text-transform: uppercase;
		color: #fff;
	}
	a {
		/*font-family: 'Gill Sans W01 Book';*/
		color: #fff;
	}
	.button {
		border-color: #fff;
	}
}

