/* Rail area: 3 products side by side */
.home-rail {
	padding: 30px 0 35px 0;
	text-align: center;
	background-color: #f3f3f3;
	& > div {
		position: relative;
		@include grid-row();
	}
	h2 {
		font-family: 'Trade Gothic W01 Bold';
		font-size: 4.375em;
		@media only screen and (min-width: 48em) {
			& {
				position: absolute;
				top: 40%;
				left: 0;
				right: 0;
			}
		}
	}
	@media only screen and (min-width: 37.5em) {
		.home-product {
			float: left;
			width: 32.268041237113%;
			margin-left: 1.546391752577%;
			&.first {
				margin-left: 0;
			}
		}
	}
	.product-image {
		border-bottom: 3px solid #000;
		img {
			display: block;
			margin: 0 auto;
		}
	}
	.product-details h3 {
		margin: 1em 0 0 0;
	}
	.price {
		font-size: 1.125em;
		margin: 0 0 1em 0;
	}
}
