<fieldset id="order_details" data-hook>
  <div class="clear"></div>
  <legend align="center"><%= Spree.t(:confirm) %></legend>
  <%= render :partial => 'spree/shared/order_details', :locals => { :order => @order } %>
</fieldset>

<br />

<div class="form-buttons" data-hook="buttons">
  <%= submit_tag Spree.t(:place_order), :class => 'continue button primary' %>
  <script>
    var disableSaveOnClick = function(e) {
        Spree.disableSaveOnClick();
    };
    document.addEventListener("DOMContentLoaded", disableSaveOnClick);
    document.addEventListener("page:load", disableSaveOnClick);
  </script>
</div>
