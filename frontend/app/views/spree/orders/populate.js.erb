$('#cart-ajax-message').remove();
<% if @item.errors.any? %>
    $('<%= escape_javascript(render :partial => "add_to_cart_ajax_error") %>').insertAfter('.cart-form');
<% else %>
    Spree.fetch_cart();
    $('<%= escape_javascript(render :partial => "add_to_cart_ajax_message") %>').insertAfter('.cart-form');
<% end %>
