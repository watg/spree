        </li>
        <li>
          <!-- Facebook sharing -->
          <div class="fb-like" data-href="https://www.woolandthegang.com<%=request.fullpath%>" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
        </li>
        <li>
          <!-- Twitter -->
