<% if product_presenter.price and !product_presenter.price.nil? %>
  <div class="add-to-cart">
    <% if !product_presenter.out_of_stock_override? %>

        <h5>Quantity</h5>
        <span class="quantity-buttons">
          <a href="#" class="minus-button">&#45;</a>
          <%= number_field_tag (product_presenter.parts? ? "variants[#{product_presenter.master.id}]" : :quantity ), 1, :id => 'qty', :min => 1 %>
          <a href="#" class="plus-button">&#43;</a>
        </span>

        <div class="add-to-cart-button-container">
          <%= button_tag :class => 'add-to-cart-button small disabled', :type => :submit, :style => "opacity: 0.5", :title => "Please select above options" do %>
          <%= Spree.t(:add_to_cart) %>
          <% end %>
        </div>

        <div id="waiting-loader" class="hide">
          <div class="waiting-message"><h5>Adding to cart<span>.</span><span>.</span><span>.</span></h5></div>
        </div>

        <div class="checkout-now-container">
          <a class="button checkout-now-button" href="<%= cart_path %>">Checkout</a>
        </div>

    <% else %>
      <h5>Sorry, this item is out of stock</h5>
    <% end %>
  </div>
<% end %>